{
    "name": "minter-sdk",
    "version": "1.0.0",
    "description": "smart contracts tests using flextesa sandbox and taquito",
    "main": "index.js",
    "scripts": {
        "test": "yarn start-sandbox && yarn test-contracts ; yarn kill-sandbox",
        "test-contracts": "jest --runInBand",
        "start-sandbox": "flextesa/start-sandbox.sh",
        "kill-sandbox": "flextesa/kill-sandbox.sh",
        "build:watch": "tsc -w -p .",
        "compile-contracts": "ts-node contracts/src/compile-contracts.ts",
        "bootstrap": "ts-node contracts/src/bootstrap-contracts-config.ts",
        "bootstrap-sandbox": "env TZ_NETWORK=sandbox ts-node contracts/src/bootstrap-contracts-config.ts",
        "bootstrap-testnet": "env TZ_NETWORK=testnet ts-node contracts/src/bootstrap-contracts-config.ts",
        "bootstrap-mainnet": "env TZ_NETWORK=mainnet ts-node contracts/src/bootstrap-contracts-config.ts"
    },
    "bin": {
        "compile-contracts": "ts-node src/compile-contracts.ts",
        "bootstrap": "ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-sandbox": "env TZ_NETWORK=sandbox ts-node contracts/src/bootstrap-contracts-config.ts",
        "bootstrap-testnet": "env TZ_NETWORK=testnet ts-node contracts/src/bootstrap-contracts-config.ts",
        "bootstrap-mainnet": "env TZ_NETWORK=mainnet ts-node contracts/src/bootstrap-contracts-config.ts"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/configstore": "4.0.0",
        "@types/jest": "26.0.10",
        "jest": "26.1.0",
        "prettier": "^2.2.1",
        "ts-jest": "26.1.3",
        "tslint": "6.1.2",
        "typescript": "3.9.7"
    },
    "dependencies": {
        "@taquito/rpc": "8.0.3-beta.0",
        "@taquito/signer": "8.0.3-beta.0",
        "@taquito/taquito": "8.0.3-beta.0",
        "@taquito/tzip16": "^8.0.4-beta.0",
        "@tsed/logger": "5.5.2",
        "@types/async-retry": "^1.4.2",
        "async-retry": "^1.3.1",
        "child_process": "1.0.2",
        "configstore": "5.0.1",
        "source-map-support": "0.5.19",
        "ts-node": "9.0.0"
    }
}
