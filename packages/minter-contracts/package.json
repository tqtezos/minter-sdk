{
    "name": "@tqtezos/minter-contracts",
    "version": "1.0.0",
    "description": "smart contracts tests using flextesa sandbox and taquito",
    "main": "dist",
    "files": [
        "dist/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "yarn lint && yarn start-sandbox && yarn compile-contracts && yarn test-contracts ; yarn kill-sandbox",
        "lint": "yarn eslint . --ext .js,.ts",
        "test-contract": "yarn start-sandbox && jest",
        "test-contracts": "jest --runInBand",
        "start-sandbox": "../../flextesa/start-sandbox.sh",
        "kill-sandbox": "../../flextesa/kill-sandbox.sh",
        "build:watch": "tsc -w -p .",
        "build": "tsc -p tsconfig.build.json",
        "compile-contracts": "ts-node src/compile-contracts.ts; ts-node src/contracts-to-ts.ts",
        "bootstrap": "ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-sandbox": "env TZ_NETWORK=sandbox ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-testnet": "env TZ_NETWORK=testnet ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-mainnet": "env TZ_NETWORK=mainnet ts-node src/bootstrap-contracts-config.ts",
        "prepare": "yarn compile-contracts && yarn build"
    },
    "bin": {
        "compile-contracts": "ts-node src/compile-contracts.ts",
        "bootstrap": "ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-sandbox": "env TZ_NETWORK=sandbox ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-testnet": "env TZ_NETWORK=testnet ts-node src/bootstrap-contracts-config.ts",
        "bootstrap-mainnet": "env TZ_NETWORK=mainnet ts-node src/bootstrap-contracts-config.ts"
    },
    "author": "TQ Tezos Maintainers <info@tqtezos.com>",
    "license": "MIT",
    "devDependencies": {
        "@taquito/michel-codec": "^8.0.6-beta.0",
        "@types/configstore": "4.0.0",
        "@types/jest": "26.0.10",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-jest": "^24.3.2",
        "jest": "26.1.0",
        "prettier": "^2.2.1",
        "ts-jest": "26.1.3",
        "typescript": "3.9.7"
    },
    "dependencies": {
        "@taquito/rpc": "8.0.3-beta.0",
        "@taquito/signer": "8.0.3-beta.0",
        "@taquito/taquito": "8.0.3-beta.0",
        "@taquito/tzip16": "^8.0.4-beta.0",
        "@tsed/logger": "5.5.2",
        "@types/async-retry": "^1.4.2",
        "async-retry": "^1.3.1",
        "child_process": "1.0.2",
        "configstore": "5.0.1",
        "moment": "^2.29.1",
        "source-map-support": "0.5.19",
        "ts-node": "9.0.0"
    },
    "bugs": {
        "url": "https://github.com/tqtezos/minter-sdk/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tqtezos/minter-sdk.git"
    },
    "homepage": "https://github.com/tqtezos/minter-sdk#readme",
    "keywords": ["tezos", "nft", "minter", "blockchain", "smart contracts"]
}
